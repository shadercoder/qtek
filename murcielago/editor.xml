<application>
    <hbox height="100%">
        <viewport id="ViewPort"></viewport>
        <vbox prefer="300">
            <panel title="Sun">
                <label>Rayleigh Scattering</label>
                <slider value="@binding[kr]" max="0.006" min="0.0001" step="0.00001"></slider>
                <label>Mie Scattering</label>
                <slider value="@binding[km]" max="0.05" min="0.001" step="0.0001"></slider>
                <label>Time</label>
                <slider value="@binding[time]" max="18" min="6"></slider>
            </panel>
        </vbox>
    </hbox>
</application>