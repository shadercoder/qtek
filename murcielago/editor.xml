<application>
    <hbox height="100%">
        <viewport id="ViewPort"></viewport>
        <vbox prefer="300">
            <panel title="Sun" flex="1">
                <label>Rayleigh Scattering</label>
                <slider value="@binding[kr]" max="0.006" min="0.0001" step="0.00001"></slider>
                <label>Mie Scattering</label>
                <slider value="@binding[km]" max="0.05" min="0.001" step="0.0001"></slider>
                <label>Time</label>
                <slider value="@binding[time]" step="0.1" max="18" min="6"></slider>
            </panel>
            <panel title="Car paint" flex="2">
                <label>Base Color</label>
                <color color="@binding[material.baseColor]"></color>
                <label>Diffuse Factor</label>
                <slider value="@binding[material.diffuseFactor]" max="1" min="0" step="0.01"></slider>
                <label>Specular Factor</label>
                <slider value="@binding[material.specularFactor]" max="1" min="0" step="0.01"></slider>
                <label>Specular Color</label>
                <color color="@binding[material.specularColor]"></color>
                <label>Roughness</label>
                <slider value="@binding[material.roughness]" max="1" min="0" step="0.01"></slider>
            </panel>
        </vbox>
    </hbox>
</application>